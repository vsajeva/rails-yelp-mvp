<%= simple_form_for(restaurant) do |f| %>
  <%= f.input :name, placeholder: "Restaurant"%>
  <%= f.input :address,  placeholder: "Address" %>
  <%= f.input :phone_number, placeholder: "Phone number" %>
  <%= f.input :category, placeholder: "Type of restaurant" %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
